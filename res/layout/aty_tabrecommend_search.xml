<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_tabrecommend_con"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/yellow_back"
            android:drawableBottom="@drawable/tabrecommend_searchbtn"
            android:text="条件搜索" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/height_line" />

        <Button
            android:id="@+id/btn_tabrecommend_acc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tabrecommend_searchbg"
            android:drawableBottom="@drawable/tabrecommend_searchbtn"
            android:text="精确搜索" />
    </LinearLayout>

   <android.support.v4.view.ViewPager
        android:id="@+id/vp_search"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>