<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qingyuan.MainActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:paddingBottom="55dip"
        android:persistentDrawingCache="animation" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#22334455"
        android:orientation="horizontal" >

        <!-- android:background 必须有 就算没有内容也必须写，否则drawable无法居中～！！！ -->

        <RadioButton
            android:id="@+id/recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_main_radiobutton_bg"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/activity_main_radiobutton_home"
            android:gravity="center"
            android:text="推荐"
            android:textColor="@color/tab_selector_tv_color" />

        <RadioButton
            android:id="@+id/news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_main_radiobutton_bg"
            android:button="@null"
            android:drawableTop="@drawable/activity_main_radiobutton_news"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/tab_selector_tv_color" />

        <RadioButton
            android:id="@+id/others"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_main_radiobutton_bg"
            android:button="@null"
            android:drawableTop="@drawable/activity_main_radiobutton_other"
            android:gravity="center"
            android:text="功能"
            android:textColor="@color/tab_selector_tv_color" />

        <RadioButton
            android:id="@+id/myself"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/activity_main_radiobutton_bg"
            android:button="@null"
            android:drawableTop="@drawable/activity_main_radiobutton_myself"
            android:gravity="center"
            android:text="我"
            android:textColor="@color/tab_selector_tv_color" />
    </RadioGroup>

</RelativeLayout>