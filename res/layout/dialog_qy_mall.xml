<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_mall"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/tv_qyMall"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_horizontal"
        android:text="鲜花名称"
        android:textColor="#550000"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_qyMall"
        android:layout_width="130dp"
        android:layout_height="129dp"
        android:layout_gravity="center" />

    <FrameLayout
        android:id="@+id/frame_qyMallCash"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/tv_qyMallCash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@android:drawable/ic_menu_send"
            android:gravity="center"
            android:padding="5dp"
            android:text="现金支付：xxx 元"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/iv_qyMallCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:src="@android:drawable/presence_online" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_qyMallCent"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/tv_qyMallCent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@android:drawable/ic_menu_send"
            android:gravity="center"
            android:padding="5dp"
            android:text="积分支付：xxx 积分"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/iv_qyMallCent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:src="@android:drawable/presence_invisible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="对方ID: "
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_qyMall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:hint="输入接收者的ID" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_qyMall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="确认支付" />

</LinearLayout>